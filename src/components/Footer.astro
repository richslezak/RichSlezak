---
const today = new Date();
---

<footer class="fixed">
  <div class="container">
    <p>
      &copy; {today.getFullYear()} richslezak.com <span>- All rights reserved.</span>
    </p>
  </div>
</footer>

<style lang="scss">
  footer {
    bottom: 0;
    height: 5rem;
    background-color: var(--color_4);
    border-top: 0.2rem solid var(--color_3);
  }

  p {
    margin: 0;
    padding-top: 1.5rem;
  }

  span {
    display: none;
  }

  @media (min-width: 400px) {
    span {
      display: inline-block;
    }
  }
</style>
